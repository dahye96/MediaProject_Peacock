<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/memberinfo_layout_my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <ImageView
            android:id="@+id/memberinfo_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/common_layout_logo" />
    </android.support.v7.widget.Toolbar>


    <ImageView
        android:id="@+id/memberinfo_layout_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/join_layout_my_toolbar"
        app:srcCompat="@drawable/join_layout_title_img"
        tools:ignore="MissingConstraints" />


    <EditText
        android:id="@+id/memberinfo_layout_editText_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/join_layout_name_tag_img"
        android:ems="15"
        android:gravity="center"
        android:hint="@string/member_info_layout_name_text"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/memberinfo_layout_editText_birthday"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline13"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/memberinfo_layout_editText_birthday"
        android:layout_width="wrap_content"
        android:layout_height="76dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:drawableStart="@drawable/join_layout_birthday_img"
        android:ems="15"
        android:gravity="center"
        android:hint="@string/member_info_layout_birthday_text"
        android:inputType="date"
        app:layout_constraintBottom_toTopOf="@+id/memberinfo_layout_editText_gender"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/memberinfo_layout_editText_name"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/memberinfo_layout_editText_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:drawableStart="@drawable/join_layout_gender_img"
        android:ems="15"
        android:gravity="center"
        android:hint="@string/member_info_layout_gender_text"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/memberinfo_layout_editText_job"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/memberinfo_layout_editText_birthday"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/memberinfo_layout_editText_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:drawableStart="@drawable/join_layout_job_img"
        android:ems="15"
        android:gravity="center"
        android:hint="@string/member_info_layout_job_text"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/memberinfo_layout_editText_monthBudget"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/memberinfo_layout_editText_gender"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/memberinfo_layout_editText_monthBudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:drawableStart="@drawable/join_layout_budget_img"
        android:ems="15"
        android:gravity="center"
        android:hint="@string/member_info_layout_monthBudget_text"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/guideline14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/memberinfo_layout_editText_job"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/memberinfo_layout_joinOk_imgButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="@+id/guideline14"
        app:srcCompat="@drawable/join_layout_joinok_click_change"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="206dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="119dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="556dp" />

</android.support.constraint.ConstraintLayout>